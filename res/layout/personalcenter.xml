<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#ffffff"
    >
    <LinearLayout
        android:layout_height="200dp"
        android:layout_width="match_parent"
        android:background="#FF4500"
        android:orientation="vertical"
        >
        <LinearLayout 
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            >
            <ImageView 
                android:layout_height="20dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:src="@drawable/xinxi"
                android:layout_marginTop="10dp"
                 android:gravity="center_horizontal|center_vertical"/>
            <TextView 
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:text="我的会员中心"
                android:textSize="22sp"
                android:textColor="#ffffff"
                android:gravity="center_horizontal|center_vertical"
                />
            <ImageView 
                android:layout_height="20dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:src="@drawable/shezhi"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal|center_vertical"
                />
            
        </LinearLayout>
       <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp">
            <ImageView 
                android:layout_height="80dp"
                android:layout_width="120dp"
                android:id="@+id/iv_login"
                android:src="@drawable/login"/>
            <TextView 
                android:layout_height="40dp"
                android:layout_width="120dp"
                android:id="@+id/tv_vipname"
                android:text="会员名"
                android:textSize="18sp"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="#ffffff"
                android:layout_toRightOf="@id/iv_login"/>

            <TextView
                android:id="@+id/tv_viplevel"
                android:layout_height="40dp"
                android:layout_width="120dp"
                android:layout_toRightOf="@id/iv_login"
                android:text="会员等级"
                android:textSize="18sp"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="#ffffff"
                android:layout_below="@id/tv_vipname"
                android:width="60dp" />
            <TextView 
                android:layout_height="40dp"
                android:id="@+id/tv_setvipname"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@id/tv_vipname"
                android:text="章聪"
                android:textSize="18sp"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="#ffffff"
                />
            <TextView 
                android:layout_height="40dp"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@id/tv_viplevel"
                android:text="6"
                android:gravity="center_vertical|center_horizontal"
                android:layout_below="@id/tv_setvipname"
                android:textSize="18sp"
                android:textColor="#ffffff"/>

        </RelativeLayout>
     </LinearLayout>
     <View 
         android:layout_height="10dp"
         android:layout_width="match_parent"
         android:background="#eeeeee"/>
     <LinearLayout 
         android:layout_height="50dp"
         android:layout_width="match_parent"
         android:orientation="horizontal"
         android:id="@+id/ll_order">
         <TextView 
             android:layout_height="50dp"
             android:layout_width="0dp"
             android:layout_weight="4"
             android:gravity="center_vertical"
             android:text="我的订单 "
             android:textColor="#222222"
             android:paddingLeft="10dp"
             android:textSize="20sp"/>
         <TextView 
             android:layout_height="50dp"
             android:layout_width="0dp"
             android:layout_weight="3"
             android:textSize="16sp"
             android:text="查看全部订单"
             android:drawableRight="@drawable/qianjin"
            android:padding="10dp"
             
             android:gravity="center_vertical"/>
         
     </LinearLayout>
             <View 
             android:layout_height="10dp"
             android:layout_width="match_parent"
             android:background="#eeeeee"/>
     <GridView 
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:id="@+id/gv_personalcenter"
         android:numColumns="4"
         android:background="#cccccc"
         android:verticalSpacing="0.5dp"
         android:horizontalSpacing="0.5dp"
         android:listSelector="#ffffff"
         android:paddingBottom="0.5dp">
         
     </GridView>
     

</LinearLayout>
