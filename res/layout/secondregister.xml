<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="#FF4500">
        <TextView 
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:id="@+id/tv_back"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="返回"/>
        <TextView 
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:gravity="center_vertical|center_horizontal"
            android:text="注册"/>
        <TextView 
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout 
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:background="#fff">
        <View 
            android:layout_height="0.5dp"
            android:layout_width="match_parent"
            android:background="#ccc"/>
        <LinearLayout 
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            >
            <EditText 
	            android:layout_height="50dp"
	            android:layout_width="0dp"
	            android:id="@+id/et_secondregister"
	            android:layout_weight="5"
	            android:textSize="18sp"
	            android:hint="手机号"
	            android:singleLine="true"
	            android:paddingLeft="15dp"
	            android:gravity="center_vertical"
	            android:background="@null"/>
            <Button 
                android:layout_height="40dp"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:text="获取验证码"
                android:id="@+id/bt_verificationcode"
                android:background="@drawable/verificationcode_radius"
                android:layout_marginRight="15dp"
                android:textColor="#fff"
                android:clickable="false"
                />
        </LinearLayout>
        
        <View 
            android:layout_height="0.5dp"
            android:layout_width="match_parent"
            android:background="#ccc"
            android:layout_marginLeft="15dp"/>
        <EditText 
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:textSize="16sp"
            android:hint="验证码"
            android:singleLine="true"
            android:id="@+id/et_verificationcode"
            android:paddingLeft="15dp"
            android:gravity="center_vertical"
            android:background="@null"/>
        <View 
            android:layout_height="0.5dp"
            android:layout_width="match_parent"
            android:background="#ccc"
            android:layout_marginLeft="15dp"/>
        <EditText 
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:textSize="16sp"
            android:hint="请输入您的密码"
            android:inputType="textPassword"
            android:id="@+id/et_password"
            android:singleLine="true"
            android:paddingLeft="15dp"
            android:gravity="center_vertical"
            android:background="@null"/>
        <View 
            android:layout_height="0.5dp"
            android:layout_width="match_parent"
            android:background="#ccc"
            android:layout_marginLeft="15dp"/>
        <EditText 
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:inputType="textPassword"
            android:textSize="16sp"
            android:singleLine="true"
            android:hint="请再次输入您的密码"
            android:id="@+id/et_secondpassword"
            android:paddingLeft="15dp"
            android:gravity="center_vertical"
            android:background="@null"/>
       <View 
            android:layout_height="0.5dp"
            android:layout_width="match_parent"
            android:background="#ccc"
            />
       <Button 
            android:layout_marginTop="20dp"
	        android:layout_height="50dp"
	        android:layout_width="match_parent"
	        android:id="@+id/bt_complete"
	        android:text="完成"
	        android:layout_marginLeft="15dp"
	        android:layout_marginRight="15dp"
	        android:textColor="#fff"
	        android:background="@drawable/login_radius"/>
    </LinearLayout>
    <TextView 
        android:layout_height="60dp"
        android:layout_width="match_parent"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="10dp"
        android:text="注册即视为同意浦银平台服务协议"/>

</LinearLayout>
