<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:orientation="horizontal"
        android:background="@color/title_bg">

        <EditText
           android:paddingLeft="10dp"
            android:layout_width="0dp"
            android:layout_height="40sp"
            android:layout_margin="5dp"
            android:layout_weight="8"
            android:background="@drawable/edittext_radius"
            android:imeOptions="flagNoExtractUi"
            android:ems="10"
            android:singleLine="true"
            android:hint="输入关键字或款号搜索产品" >
        </EditText>

  	<ImageView 
  	    android:layout_margin="10dp"
  	    android:layout_width="0dp"
  	    android:layout_height="30sp"
  	    android:layout_weight="1"
  	    android:src="@drawable/sousuo"/>
  	</LinearLayout>
  	<com.alpha.extra.HomeBanner
  	    android:id="@+id/banner"
  	    android:layout_width="match_parent"
  	    android:layout_height="150dp">

  		

  	</com.alpha.extra.HomeBanner>
  	<GridView
  		    android:id="@+id/gridview"
  		    android:layout_width="wrap_content"
  		    android:layout_height="wrap_content"
  		    android:verticalSpacing="0.5dp"
  		    android:background="#ccc"
  		    android:paddingBottom="0.5dp"
  		    android:numColumns="4"
  		    android:listSelector="@android:color/transparent"
  		     >
  		</GridView>
  	<LinearLayout 
  	    android:layout_width="match_parent"
  	    android:layout_height="40dp"
  	    android:orientation="horizontal"
  	    >
  	    	<ImageView 
  	    	    android:layout_width="20dp"
  	    	    android:layout_height="20dp"
  	    	    android:layout_marginLeft="20dp"
  	    	    android:layout_gravity="center_vertical"
  	    	    android:src="@drawable/laba"
  	    	    />
  	    	<TextView 
  	    	    android:layout_height="wrap_content"
  	    	    android:layout_width="wrap_content"
  	    	    android:layout_marginLeft="10dp"
  	    	    android:textColor="#fe4213"
  	    	    android:textSize="20sp"
  	    	    android:layout_gravity="center_vertical"
  	    	    android:text="今日银价:"/>
  	    	<com.alpha.extra.MarqueeTextView
  	    	    android:layout_height="30dp"
  	    	    android:layout_width="fill_parent"
  	    	    android:layout_gravity="bottom"
  	    	    android:text="S999价格为10元,S999价格为10元,S999价格为10元,S999价格为10元"
  	    	    android:singleLine="true"
  	    	    android:textSize="18sp"
  	    	    android:ellipsize="marquee"
  	    	    android:marqueeRepeatLimit="marquee_forever"
  	    	    android:layout_marginLeft="5dp"
  	    	    android:focusable="true"
  	    	    android:focusableInTouchMode="true"/>
  	</LinearLayout>
  	<View 
  	    android:layout_width="fill_parent"
  	    android:layout_height="0.5dp"
  	    android:background="#cccccc"/>
  	<Spinner 
  	    android:layout_height="30dp"
  	    android:layout_width="match_parent"
  	    android:id="@+id/sp_homepage"/>
  	<GridView 
  	    android:layout_width="wrap_content"
  	    android:layout_height="wrap_content"
  	    android:id="@+id/gd_homepage"
  	    android:numColumns="2"
  	    android:listSelector="@android:color/transparent"
  	    android:background="#cccccc"
  	    android:horizontalSpacing="0.5dp"
  	    android:verticalSpacing="0.5dp"
  	    android:paddingTop="0.5dp"
  	    android:layout_marginTop="5dp"
  	    >
  	    
  	</GridView>

</LinearLayout>
